/**index.wxss**/
page {
  cursor: default;
  -webkit-user-select: none;
  user-select: none;
  width: 100%;
  overflow-x: hidden;
}

.search_bar {
  position: relative;
  padding: 8px 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background-color: #efeff4;
  border-top: 1rpx solid #d7d6dc;
  border-bottom: 1rpx solid #d7d6dc;
  height: 100rpx;
}

.search_bar_form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  border-radius: 5px;
  background: #fff;
  border: 1rpx solid #e6e6ea;
}

.search_label {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 2;
  border-radius: 3px;
  text-align: center;
  color: #9b9b9b;
  background: #fff;
  line-height: 28px;
  height: 40rpx;
}

.search_icon {
  margin-right: 8px;
  font-size: inherit;

}

.search_text {
  display: inline-block;
  font-size: 14px;
  vertical-align: middle;
}

.category_bar {
  display: flex;
  flex-wrap: wrap;
  /*规定灵活的项目在必要的时候拆行或拆列。*/
  border-top: 1rpx solid #eee;
  border-left: 1rpx solid #eee;
  background-color: #fff;

}

.category_bar .item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 33.3333333333%;
  height: 250rpx;
  border-right: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  box-sizing: border-box;
}

.category_bar .item image {
  width: 100rpx;
  height: 100rpx;

}

.category_bar .item text {
  margin-top: 20rpx;
  color: #999;
  font-size: 28rpx;
}

.links {
  display: flex;
  justify-content: space-between;
  margin: 10rpx 0;
  padding: 30rpx;
  background-color: #fff;

}

.navigator {
  height: auto;
  width: auto;
  display: block;

}

.links image {
  width: 330rpx;
  height: 185rpx;

}

.navigation_bar {
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
}

.hoverClass {
  color: red;
}

.divider {
  opacity: 0.2;
}



.photo_swiper {
  height: 380rpx;
}

.swiper {
  display: block;

}

.swiper-item {
  display: block;
  overflow: hidden;
  will-change: transform;

}

.divider {
  height: 15rpx;
  background-color: #999;
}

.photo_swiper navigator,
.photo_swiper image {
  min-width: 100%;
  height: 100%;

}

.new {
  margin-top: 10rpx;
}

.redLine {
  width: 75%;
  height: 10rpx;
  background-color: red;
}

.product {
  display: flex;
  flex-wrap: wrap;
  border-top: 1rpx solid #eee;
  border-left: 1rpx solid #eee;
  background-color: #fff;
  margin-top: 5rpx;

}

.product .item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 50%;
  height: 250rpx;
  border-right: 1rpx solid black;
  border-bottom: 1rpx solid black;
  box-sizing: border-box;

}

.product .item image {
  width: 350rpx;
  height: 350rpx;
}

.weui-icon-search_in-box {
  position: absolute;
  right: 10rpx;
  top: 15rpx;

}

.weui-search-bar_input {
  height: 100%;
  line-height: 28rpx;
  font-size: 30rpx;

}
.newActLine{
  width: 300rpx;
  height: 20rpx;
  background-color: red;
}