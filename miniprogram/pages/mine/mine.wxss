/* pages/mine/mine.wxss */
.user_image{
    display:flex;
    justify-content:center;
    align-items:center;
    height:400rpx;
    background-color:#3a4861;
    flex-direction: column;
    padding-top: 50rpx;
}
.user_image image{
    width:220rpx;
    height:220rpx;
    border-radius:50%;
    box-shadow:0 0 0 10rpx #777f92;
}
.divider{
    height:20rpx;
    box-shadow:inset 0 1rpx 2rpx #eee;/*将外部阴影 (outset) 改为内部阴影。*/
}
.cell{
    margin-top:20rpx;
}
.cell .item{
    display:flex;
    justify-content:space-between;
    align-items:center;
    position:relative;
    padding:20rpx 30rpx;
    border-bottom:1rpx solid #f0f0f0;
    background-color:#fff;
    font-size:30rpx;

}
.name {
  text-align: center;
  color: #9B9B9B;
  font-size: 40rpx;
  margin: 10rpx 0 60rpx;
}